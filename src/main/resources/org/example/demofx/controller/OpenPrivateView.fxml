<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="271.0" prefWidth="387.0" style="-fx-background-color: #efefef;"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.demofx.controller.OpenPrivateController">
    <children>
        <Label layoutX="90.0" layoutY="28.0" text="Private Bookmark">
            <font>
                <Font name="Microsoft YaHei Bold" size="25.0"/>
            </font>
        </Label>
        <Label layoutX="31.0" layoutY="113.0" text="Password">
            <font>
                <Font name="Microsoft YaHei Bold" size="15.0"/>
            </font>
        </Label>
        <PasswordField fx:id="passwordField" layoutX="108.0" layoutY="113.0" prefHeight="27.0" prefWidth="197.0"/>
        <ImageView fx:id="forgetPasswordView" fitHeight="26.0" fitWidth="29.0" layoutX="310.0" layoutY="114.0"
                   onMouseClicked="#handleForgetPasswordAction" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../../icons/问号_黑.png"/>
            </image>
        </ImageView>
        <Button fx:id="confirmButton" layoutX="211.0" layoutY="222.0" mnemonicParsing="false"
                onAction="#handleConfirmAction" style="-fx-text-fill: white; -fx-background-color: #3baae7;"
                styleClass="rounded-button" stylesheets="../../../../stylesheets/style.css" text="Confirm">
            <font>
                <Font size="15.0"/>
            </font>
        </Button>
        <Button fx:id="cancelButton" layoutX="299.0" layoutY="222.0" mnemonicParsing="false"
                onAction="#handleCancelAction" styleClass="rounded-button"
                stylesheets="../../../../stylesheets/style.css" text="Cancel">
            <font>
                <Font size="15.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
