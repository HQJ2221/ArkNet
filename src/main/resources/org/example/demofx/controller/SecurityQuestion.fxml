<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="476.0" prefWidth="362.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.demofx.controller.SecurityQuestionController">

    <children>
        <Label fx:id="question" layoutX="49.0" layoutY="97.0" prefHeight="27.0" prefWidth="300.0" text="Answer Question">
            <font>
                <Font name="Microsoft YaHei Bold" size="20.0" />
            </font>
        </Label>
        <TextField fx:id="questionAnswerInputField" layoutX="48.0" layoutY="139.0" prefHeight="35.0" prefWidth="255.0" styleClass="text-field" />
        <TextField fx:id="resetPasswordInputField" layoutX="49.0" layoutY="249.0" prefHeight="35.0" prefWidth="255.0" promptText="请输入新密码" styleClass="text-field" />
        <Label layoutX="49.0" layoutY="203.0" text="New password">
            <font>
                <Font name="Microsoft YaHei Bold" size="20.0" />
            </font>
        </Label>
        <Button fx:id="confirmButton" layoutX="195.0" layoutY="401.0" mnemonicParsing="false" onAction="#handleConfirmAction" style="-fx-text-fill: white; -fx-background-color: #3baae7;" styleClass="rounded-button" stylesheets="../../../../stylesheets/style.css" text="OK">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Button fx:id="cancelButton" layoutX="262.0" layoutY="401.0" mnemonicParsing="false" onAction="#handleCancelAction" styleClass="rounded-button" stylesheets="../../../../stylesheets/style.css" text="Cancel">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Label layoutX="155.0" layoutY="28.0" text="Reset password">
            <font>
                <Font name="Microsoft YaHei Bold" size="20.0" />
            </font>
        </Label>
        <ImageView fitHeight="27.0" fitWidth="26.0" layoutX="118.0" layoutY="29.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../../../icons/重设密码.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>
