<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="270.0" prefWidth="402.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.demofx.controller.TagAddController">
    <children>
        <Label layoutX="179.0" layoutY="23.0" text="Edit Tag">
            <font>
                <Font name="Microsoft YaHei Bold" size="20.0"/>
            </font>
        </Label>
        <Label layoutX="59.0" layoutY="94.0" text="Tag Name">
            <font>
                <Font name="Microsoft YaHei Bold" size="20.0"/>
            </font>
        </Label>
        <TextField fx:id="tagNameInputField" layoutX="166.0" layoutY="94.0" prefHeight="27.0" prefWidth="181.0"/>
        <Button fx:id="addButton" layoutX="239.0" layoutY="214.0" mnemonicParsing="false" onAction="#handleAddAction"
                styleClass="rounded-button" stylesheets="@../../../../stylesheets/style.css" text="Add"/>
        <Button fx:id="deleteButton" layoutX="288.0" layoutY="214.0" mnemonicParsing="false"
                onAction="#handleDeleteAction" styleClass="rounded-button"
                stylesheets="@../../../../stylesheets/style.css" text="Delete"/>
        <Button fx:id="cancelButton" layoutX="338.0" layoutY="214.0" mnemonicParsing="false"
                onAction="#handleCancelButton" styleClass="rounded-button"
                stylesheets="@../../../../stylesheets/style.css" text="Cancel"/>
        <ImageView fitHeight="27.0" fitWidth="32.0" layoutX="137.0" layoutY="23.0" pickOnBounds="true"
                   preserveRatio="true">
            <image>
                <Image url="@../../../../icons/添加Tag.png"/>
            </image>
        </ImageView>
        <Label layoutX="98.0" layoutY="151.0" text="Private">
            <font>
                <Font name="Microsoft YaHei Bold" size="20.0"/>
            </font>
        </Label>
        <CheckBox fx:id="isPrivateCheckBox" layoutX="169.0" layoutY="153.0" mnemonicParsing="false" prefHeight="23.0"
                  prefWidth="20.0"/>
    </children>
</AnchorPane>
